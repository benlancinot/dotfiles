!------------------------------------------------
! URXVT GENERAL CONFIG
!------------------------------------------------
URxvt.geometry:      80x22
URxvt.transparent:   false
URxvt.shading:       0
URxvt.tintColor:     white

!------------------------------------------------
! URXVT FONTS
!------------------------------------------------
URxvt*termName: rxvt-unicode
URxvt.imLocale: fr_FR.utf8
xterm*utf8: 1

URxvt*font: xft:Hack Nerd Font Mono:size=11
URxvt*boldFont: xft:Hack Nerd Font Mono:style=Bold:size=11
URxvt*italicFont: xft:Hack Nerd Font Mono:style=Italic:size=11
URxvt*bolditalicFont: xft:Hack Nerd Font Mono:style=Bold Italic:size=11

URxvt*letterSpace: -1
URxvt*allow_bold: true
URxvt.internalBorder: 12

!------------------------------------------------
! URXVT FONT SETTINGS
!------------------------------------------------
Xft.autohint: true
Xft.antialias: true
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.rgba: rgb
Xft.lcdfilter: lcddefault

!------------------------------------------------
! URXVT ENABLE LINK SUPPORT
!------------------------------------------------
URxvt.depth: 32
URxvt*scrollBar: false
URxvt.urgentOnBell: false
URxvt.visualBell: false
URxvt*saveLines: 3256
URxvt*mouseWheelScrollPage: true
URxvt*cursorBlink: true
URxvt*cursorUnderline: true

!------------------------------------------------
! Extensions ~/.urxvt./ext
!------------------------------------------------
URxvt.perl-ext-common: default,keyboard-select,clipboard,matcher

! Keyboard-select
URxvt.keysym.C-Escape: perl:keyboard-select:activate
URxvt.keysym.C-S-S: perl:keyboard-select:search
URxvt.keyboard-select.clipboard: true

!! Matcher
URxvt.url-launcher: firefox

!------------------------------------------------
! URXVT COPY PASTE SHORTCUTS
!------------------------------------------------
URxvt.iso14755: false
URxvt.clipboard.autocopy: true
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste

!------------------------------------------------
! URXVT TABS
!------------------------------------------------
URxvt.tabbedex.autohide: yes
URxvt.tabbedex.tabbar-fg: 2
URxvt.tabbedex.tabbar-bg: 0
URxvt.tabbedex.tab-fg: 10
URxvt.tabbedex.tab-bg: 0
URxvt.tabbedex.title: yes
URxvt.tabbedex.new-button: no

!------------------------------------------------
! URXVT FULLSCREEN TOGGLE
!------------------------------------------------
URxvt.keysym.F11: perl:fullscreen:switch

!------------------------------------------------
! URXVT COLORS
!------------------------------------------------

*background: #303446
*foreground: #C6D0F5

! black
*color0: #51576D
*color8: #626880

! red
*color1: #E78284
*color9: #E78284

! green
*color2: #A6D189
*color10: #A6D189

! yellow
*color3: #E5C890
*color11: #E5C890

! blue
*color4: #8CAAEE
*color12: #8CAAEE

! magenta
*color5: #F4B8E4
*color13: #F4B8E4

! cyan
*color6: #81C8BE
*color14: #81C8BE

! white
*color7: #B5BFE2
*color15: #A5ADCE

emacs.font: Hack-10
